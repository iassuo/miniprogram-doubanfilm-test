/* pages/comment/comment.wxss */
.detail-container {
  height: 400rpx;
  filter: blur(40rpx); 
  opacity: .4;
}
.detail-mask {
  position: absolute;
  width: 100%;
  height: 400rpx;
  top: 0;
  left: 0;
  background-color: #333;
  z-index: -1;
}
.detail-info{
  display: flex;
  padding: 20rpx;
  position: absolute;
  top: 0;
  left: 0;
}
.detail-img {
  width: 300rpx;
  height: 360rpx;
}
.detail{
  flex: 1;
  margin-left: 10rpx;
}
.detail view {
  padding: 8rpx;
}
.detail .text {
  color: rgb(194, 21, 21);
}
.detail .title {
  font-weight: bolder;
  font-size: 3                                                                                                                                                                                                                                              vvvvvvbjjj6rpx;
}
.comment{
  font-size: 28rpx;
  color: rgb(90, 83, 83);
}
.imgs {
  width: 200rpx;
  height: 200rpx;
  margin-right: 20rpx;
}
